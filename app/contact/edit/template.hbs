  <form {{action 'edit' on="submit" }}>

    <p>
      <label for="FirstName">FirstName</label>
      <Input @id="FirstName" @type="text" @value={{this.model.FirstName}} />
    </p>

    <p>
      <label for="LastName">LastName</label>
      <Input @id="LastName" @type="text" @value={{this.model.LastName}} />
    </p>

    <p>
      <label for="Email">Email</label>
      <Input @id="Email" @type="email" @value={{this.model.Email}} />
    </p>

    <p>
      <label for="Phone">Phone</label>
      <Input @id="Phone" @type="text" @value={{this.model.Phone}} />
    </p>

    <p>
      <label for="MobilePhone">MobilePhone</label>
      <Input @id="MobilePhone" @type="text" @value={{this.model.MobilePhone}} />
    </p>

    <button {{action "edit" this.model}}>Valider</button>

